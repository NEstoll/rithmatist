    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run game",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/game.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run client",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/client.py",
            "args": [
                "10.243.0.6",
                "33514"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}